<div class="admin__form admin__bg">
    <h3 class="title-lil-2 txt-black">
        <% if (editing) { %>Update Wedding Cake<% } else { %>Add Wedding Cake<% } %>
    </h3>
    <form class="add__form" action="/admin/<% if (editing) { %>edit-weds<% } else { %>add-pastry<% } %>" method="POST">
        <div class="add__form--sheet">
            <input type="text" class="add__input" id="name" placeholder="Name of cake" name="name"
                value="<% if (editing) { %><%= pastry.name %> <% } %>" required>
            <label for="name" class="add__label">Name of wedding cake</label>
        </div>
        <div class="add__form--sheet">
            <input type="number" class="add__input" id="price" placeholder="Price" name="price"
                value="<% if (editing) { %><%= pastry.price %><% } %>" required>
            <label for="price" class="add__label">Price</label>
        </div>
        <div class="add__form--sheet">
            <input type="text" class="add__input" id="image" placeholder="Image" name="image"
                value="<% if (editing) { %><%= pastry.image %> <% } %>" required>
            <label for="image" class="add__label">Image</label>
        </div>
        <input type="hidden" name="type" value='Wedding-cake'>
        <div class="add__form--sheet">
            <textarea name="desc" cols="30" rows="5" class="add__input"
                placeholder="Description"><% if (editing) { %><%= pastry.description %> <% } %></textarea>
        </div>
        <% if (editing) { %>
        <input type="hidden" value="<%= pastry._id %>" name="pastryId">
        <% } %>
        <button class="btn-3 btn-deep--pink" type="submit"><% if (editing) { %>Update Wedding Cake<% } else { %>Add
            Wedding Cake<% } %></button>
        <a href="/admin/weds" class="btn-3 btn-deep--pink">Wedding Cakes</a>
    </form>
</div>