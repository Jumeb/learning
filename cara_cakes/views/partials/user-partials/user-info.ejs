<div class="panel__user">
    <div class="panel__user--frame">
        <img src="<% if (!events[0].userId.image) { %>/img/cookies-7.jpg <% } else { %>/<%= events[0].userId.image %> <% } %>" alt="User image" class="panel__user--img">
    </div>
    <div class="panel__user--info">
        <h3 class="panel__user--name">
            <%= events[0].userId.name %>
        </h3>
    </div>
    <div class="panel__user--events">
        <div class="panel__user--association">
            <span class="num">
                <% if (path === '/user' || '/user/add-event') { %>
                <% if (events.length < 0) { %>0
                <% } else { %>
                <% let noEvents = 0 %>
                <% events.forEach(e => { %>
                <div style="display: none;">
                    <%= (noEvents += 1) %>
                </div>
                <% }) %>
                <%= noEvents %>
                <input type="hidden" name="noEvents" value="<%= noEvents %>">
                <% } %>
                <% } else { %>
                Pending
                <% } %>

            </span>
            <span class="type">Events</span>
        </div>
        <div class="panel__user--association">
            <span class="type notify__item"><a href="/user/edit-profile/<%= events[0].userId._id %>" class="edit txt-white">Edit profile</a></span>
        </div>
    </div>
    <div class="txt-cnt panel__logout">
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn-2 btn-2__hover-icon">Logout<span
                    class="btn-2__icon fas fa-power-off"></span></button>
        </form>
    </div>
    <div class="power">
        Copyrighted &copy;<a href="#" class="dev">JB Inc</a>
    </div>
</div>